%form#councillor-message-form
  %legend Write to your elected councillors about this application.

  %fieldset.councillor-select-inputgroup
    %legend Which councillor would you like to contact?
    %ul.councillor-select-list
      %li
        %input.councillor-select-radio{id: "councillor-1", name: "councillor_id", value: "1", type: "radio"}
        %label.councillor-select-lable.h-card{for: "councillor-1"}
          %span.p-name Irene Lam
          %span.p-org Independent
      %li
        %input.councillor-select-radio{id: "councillor-2", name: "councillor_id", value: "2", type: "radio"}
        %label.councillor-select-lable.h-card{for: "councillor-2"}
          %span.p-name Fatima Merriweather
          %span.p-org Liberal Party of Australia
      %li
        %input.councillor-select-radio{id: "councillor-3", name: "councillor_id", value: "3", type: "radio"}
        %label.councillor-select-lable.h-card{for: "councillor-3"}
          %span.p-name George Tall
          %span.p-org The Residents Action Group for Dream Area
      %li
        %input.councillor-select-radio{id: "councillor-4", name: "councillor_id", value: "4", type: "radio"}
        %label.councillor-select-lable.h-card{for: "councillor-4"}
          %span.p-name Paula Crisp
          %span.p-org Greens
      %li
        %input.councillor-select-radio{id: "councillor-5", name: "councillor_id", value: "5", type: "radio"}
        %label.councillor-select-lable.h-card{for: "councillor-5"}
          %span.p-name Leon Oldfield
          %span.p-org Australian Labor Party
  - # TODO: Don’t show this section until a councillor has been selected
  %fieldset.councillor-message-inputgroup
    %legend Write your message
    .councillor-message-block
      - # TODO: Change this to the councillors name once it is selected
      %p Dear Councillor
      %p
        %label{for: "commentor_name"} My name is
        %input#commentor_name{type: "text", placeholder: "your name here"}

      - # TODO: Add some placeholder content like 'I'm writing to you about DA ..'
      %textarea#message_body{aria: {label: "Your message"}, rows: "15", placeholder: "Write your message here"}

  - # TODO: Replace 'your councillor' with the selected councillor’s name
  - #       to reenforce the personal connection
  %input.button.button-action{type: 'submit', value: "Post your public message to your councillor"}
