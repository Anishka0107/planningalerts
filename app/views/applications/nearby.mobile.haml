- content_for :page_title, @description
%h2.title= @description
%p
  = link_to_unless @sort == "time", "Most recent first", :sort => "time", :page => nil
  |
  = link_to_unless @sort == "distance", "Closest first", :sort => "distance", :page => nil

- if @sort == "time"
  - p, n = "Newer", "Older"
- else
  - p, n = "Closer", "Further"

= paginated_section @applications, :previous_label => p, :next_label => n, :inner_window => 1, :outer_window => 0 do
  .list
    = render :partial => "application.mobile", :as => :application, :collection => @applications
