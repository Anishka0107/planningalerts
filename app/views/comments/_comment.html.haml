%figure.comment
  - if current_page?(comments_path)
    %h2.comment-address
      On #{comment.application.address}: #{link_to truncate(comment.application.description), application_path(comment.application)}
  %blockquote.comment-text= comment_as_html(comment.text)
  %figcaption.comment-meta
    %span.author by #{comment.name} #{time_ago_in_words(comment.updated_at)} ago
    - if current_page?(application_path(comment.application))
      %span.report= link_to "report comment", new_comment_report_path(comment)
