		<script type="text/javascript" defer="defer">
						 <% if @set_focus_control !="" %>setFocus('<%= @set_focus_control %>');<% end %><% if @onloadscript !="" %><%= @onloadscript %>; <% end -%>
		</script>
	<% end -%>
</body>
</html>